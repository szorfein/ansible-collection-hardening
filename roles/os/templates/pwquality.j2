{% if ansible_os_family == 'Debian' %}
retry = 3
minlen = 10
difok = 6
dcredit = -1
ucredit = -1
ocredit = -1
lcredit = -1
enforce_for_root
{% else %}
password required pam_pwquality.so retry=3 minlen=10 difok=6 dcredit=-1 ucredit=-1 ocredit=-1 lcredit=-1 [badwords=myservice mydomain] enforce_for_root
password required pam_unix.so use_authtok sha512 shadow rounds={{ os_auth_crypt_rounds }}
{% endif %}
